<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/holo_orange_light">

        <ImageView
            android:id="@+id/profileImageView"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginVertical="16dp"
            android:layout_marginStart="145dp"
            android:src="@drawable/profile_photo_default" />

        <Button
            android:id="@+id/saveButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginVertical="50dp"
            android:backgroundTint="@android:color/holo_blue_light"
            android:text="Guardar"
            android:textColor="@android:color/white" />
    </LinearLayout>

    <TextView
        android:id="@+id/usernameTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:text="Usuario"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/mailTextView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="8dp"
        android:layout_marginVertical="8dp"
        android:text="Correo"
        android:textAlignment="center"
        android:textSize="16sp" />

    <EditText
        android:id="@+id/biographyTextMultiLine"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_margin="8dp"
        android:ems="10"
        android:gravity="start|top"
        android:hint="BiografÃ­a"
        android:inputType="textMultiLine"
        android:padding="8dp" />

    <Button
        android:id="@+id/deleteAccountButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp"
        android:backgroundTint="@android:color/holo_red_light"
        android:text="Borrar cuenta"
        android:textColor="@android:color/white" />

    <!-- FOOTER -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_weight="0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_gravity="bottom|center"
            android:orientation="horizontal"
            android:background="@android:color/holo_blue_light">

            <Button
                android:id="@+id/profileButton"
                android:layout_width="125dp"
                android:layout_height="70dp"
                android:layout_margin="6dp"
                android:backgroundTint="#4040C0"
                app:cornerRadius="8dp"
                android:textColor="@android:color/white"
                android:text="Perfil" />
            <Button
                android:id="@+id/homeButton"
                android:layout_width="125dp"
                android:layout_height="70dp"
                android:layout_margin="6dp"
                android:backgroundTint="#4040C0"
                app:cornerRadius="8dp"
                android:textColor="@android:color/white"
                android:text="Home" />

            <Button
                android:id="@+id/supportButton"
                android:layout_width="120dp"
                android:layout_height="70dp"
                android:layout_margin="6dp"
                android:backgroundTint="#4040C0"
                app:cornerRadius="8dp"
                android:textColor="@android:color/white"
                android:text="Soporte" />
        </LinearLayout>
    </LinearLayout>
    <!-- FOOTER -->
</LinearLayout>